{
    "compilerOptions": {
        "jsx": "react",
        "module": "CommonJS",
        "target": "ES6",

        "esModuleInterop": true,
        "noImplicitUseStrict": true,
        "removeComments": false,

        "noImplicitAny": true,

        "rootDir": "src",
        "outDir": "build",

        "typeRoots": ["./types", "./node_modules/@types"]
    },

    "exclude": ["node_modules", "types"]
}
